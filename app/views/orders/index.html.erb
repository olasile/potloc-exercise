<div class="row mt-4">
  <div class="col-md-12 d-flex">
    <h3>Orders</h3>
  </div>
</div>

<table class="table mt-4">
  <thead>
  <tr>
    <th>Products</th>
    <th>Ordered At</th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td>
        <% order.order_products.each do |order_product| %>
          <div>
            <%= order_product.quantity %>x <%= order_product.product.name %>
          </div>
        <% end %>
      </td>
      <td>
        <%= order.created_at %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>